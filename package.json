{
  "name": "chore-manager",
  "version": "1.0.0",
  "private": true,
  "description": "Tenant chore management webapp",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "prisma:migrate:dev": "npx prisma migrate dev --name make-tenant-roomid-optional"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@prisma/client",
      "@prisma/engines",
      "esbuild",
      "prisma",
      "sharp"
    ]
  }
}
