{
  "name": "@rentably/api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "prisma generate && nest build",
    "start:migrate": "prisma migrate deploy && node dist/main",
    "dev": "nest start --watch",
    "start": "node dist/main",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "dotenv -e .env.test -- jest --config jest.e2e.config.js --runInBand",
    "test:e2e:cov": "dotenv -e .env.test -- jest --config jest.e2e.config.js --runInBand --coverage",
    "test:e2e:watch": "dotenv -e .env.test -- jest --config jest.e2e.config.js --runInBand --watch",
    "test:e2e:setup": "dotenv -e .env.test -- npx prisma migrate deploy",
    "test:all:cov": "npm run test:cov && npm run test:e2e:cov && npm run coverage:merge",
    "coverage:merge": "mkdir -p coverage/merged && cp coverage/unit/coverage-final.json coverage/merged/unit.json && cp coverage/e2e/coverage-final.json coverage/merged/e2e.json && nyc merge coverage/merged coverage/merged/merged.json && nyc report -t coverage/merged --reporter=text --reporter=lcov",
    "db:test:start": "docker compose up -d postgres-test",
    "db:test:stop": "docker compose stop postgres-test",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "prisma:seed": "ts-node prisma/seed.ts"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/schedule": "^4.0.0",
    "@nestjs/serve-static": "^5.0.4",
    "@prisma/client": "^5.8.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.11",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.1",
    "resend": "^2.1.0",
    "rxjs": "^7.8.1",
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.0",
    "@types/nodemailer": "^7.0.4",
    "@types/passport-jwt": "^4.0.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "nyc": "^17.1.0",
    "prisma": "^5.8.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
